<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f0e68c">

        <!-- TextView 1 -->
        <Space
            android:layout_width="30dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IPアドレス"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/ipadress"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="Enter IPadress of your esp32"
            android:layout_weight="1"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Port"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/port_num"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Enter Port num"
            android:layout_weight="1"
            android:textSize="15sp"
            />
        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/connect"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:textSize="16sp"
            android:backgroundTint="@color/blue"
            android:layout_weight="1"
            android:layout_gravity="right"/>
        <Space
            android:layout_width="30dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffe4e1">

        <!-- TextView 1 -->
        <Space
            android:layout_width="30dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="軸下限"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/min_axis"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="enter min limit"
            android:layout_weight="1"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="軸上限"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/max_axis"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="enter max limit"
            android:layout_weight="1"
            android:textSize="15sp"
            />
        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/apply"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:textSize="16sp"
            android:backgroundTint="@color/blue"
            android:layout_weight="1"
            android:layout_gravity="right"/>
        <Space
            android:layout_width="30dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>
